  <!-- header introduction -->
  <header>
    <div class="container">
      <div class="header-intro-grp">
        <p class="header-intro" >Hi I'm Ashwin<p>
        <p class="header-intro-message">Great to meet you!</p>
      </div>
    </div>
  </header>
  <!-- header introduction end -->

  <!-- about me -->
  <section class="about-me">
    <div class="col-lg-12 text-center header">
      <h2>About Me</h2>
    </div>
    <div class="container">
      <p class="about-me-text">
      I am a self taught developer whom also holds a degree in Business Administration (Marketing). During my university as a marketing student, I learnt a fair bit of computer science as well as programming. I enjoy writing software and still continue to do it as my job, as well as during my free time.
      </p>
      <div class="col-lg-12 text-center">
        <a href="files/Ashwin-Resume.pdf" class="btn btn-xl" role="button">Download Resume</a>
      </div>
    </div>
  </section>
  <!-- about me end -->

  <section class="portfolio">
    <!-- portfolio header-->
    <div class="col-lg-12 text-center header">
      <h2>Portfolio</h2>
    </div>
    <!-- portfolio header end-->

    <!-- portfolio start -->
    <div class="container">
      <div class="row">

      <% portfolio.forEach(project => { %>
        <div class="col-md-4 col-sm-6 portfolio-item">
          <div class="portfolio-pic-container">
            <!-- there should be a link when hovered here eventually -->
            <a class="portfolio-link" href="<%= project.github %>">
              <img class="img-responsive" src="<%= project.picture %>">
            </a>
          </div>
          <div class="portfolio-caption">
            <h4><%= project.title %></h4>
            <p class="text-grey"><%= project.description %></p>
          </div>
        </div>
      <% }); %>

      </div>
    </div>
    <!-- portfolio end -->
    
  </section>

  <section class="work-exp">
    <!-- work history -->
    <div class="container">
      <div class="row">

      <% workHistoryList.forEach(workHistory => { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img class="work-img img-responsive img-centered" src="<%= workHistory.companyLogoSrc %>"/>
          </div>
        </div>
      <% }); %>
      </div>

    </div>
    </section>
    <!-- work history end -->

  <section class="contact-me">
    <!-- contact me header-->
    <div class="col-sm-12 text-center header">
      <h2>Contact Me</h2>
    </div>
    <!-- contact me header end-->

    <!-- contact me -->
    <div class="container">
      <form action="/contact" method="post" class="form-horizontal">
        <div class="col-md-6">
          <div class="form-group">
            <input name="contact[name]" type="text" class="form-control" placeholder="Name" aria-describedby="sizing-addon1">
          </div>

          <div class="form-group">
            <input name="contact[email]" type="email" class="form-control" placeholder="E-Mail" aria-describedby="sizing-addon1">
          </div>

          <div class="form-group">
            <input name="contact[phone]" type="text" class="form-control" placeholder="Contact Number" aria-describedby="sizing-addon1">
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <textarea name="contact[message]" class="form-control" placeholder="Message"></textarea>
          </div>
        </div>

        <div id="contact-button-submit" class="col-lg-12 text-center">
            <button class="btn btn-xl" type="submit">Submit!</button>
        </div>
        </form>
      </div>
    </div>
  </section>
  <!-- contact me end -->

